.header-menu
{
    @extend menu;

    margin: 0;
    border: 0;
    padding: 0;

    display: block;

    background:
        url( '/static/image/header_menu/first_background.png' ),
        url( '/static/image/header_menu/second_background.png' );

    font-size: 1.5rem;

    +Media( above-10em )
    {
        margin: 0.5rem;
        border: 0.5rem;
        padding: 0.5rem;

        display: block;
    }

    +Media( above-20em )
    {
        margin: 1rem;
        border: 1rem;
        padding: 1rem;

        display: block;
    }

    +Media( above-30em )
    {
        margin: 1.5rem;
        border: 1.5rem;
        padding: 1.5rem;

        display: block;
    }
}

